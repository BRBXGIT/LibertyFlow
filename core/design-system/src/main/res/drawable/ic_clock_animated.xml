<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="path"
                android:pathData="M 12 2 C 9.349 2 6.804 3.054 4.929 4.929 C 3.054 6.804 2 9.349 2 12 C 2 14.651 3.054 17.196 4.929 19.071 C 6.804 20.946 9.349 22 12 22 C 14.651 22 17.196 20.946 19.071 19.071 C 20.946 17.196 22 14.651 22 12 C 22 9.349 20.946 6.804 19.071 4.929 C 17.196 3.054 14.651 2 12 2 Z"
                android:fillAlpha="0"
                android:strokeColor="#1c274c"
                android:strokeWidth="1.5"/>

            <group
                android:name="minute_group"
                android:pivotX="12"
                android:pivotY="12">
                <path
                    android:name="path_1"
                    android:pathData="M 12 12 L 12 8"
                    android:fillAlpha="0"
                    android:strokeColor="#1c274c"
                    android:strokeWidth="1.5"
                    android:strokeLineCap="round"/>
            </group>

            <group
                android:name="hour_group"
                android:pivotX="12"
                android:pivotY="12">
                <path
                    android:name="path_2"
                    android:pathData="M 12 12 L 14.5 14.5"
                    android:fillAlpha="0"
                    android:strokeColor="#1c274c"
                    android:strokeWidth="1.5"
                    android:strokeLineCap="round"/>
            </group>
        </vector>
    </aapt:attr>

    <target android:name="minute_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="rotation"
                android:duration="2000"
                android:valueFrom="0"
                android:valueTo="720"
                android:valueType="floatType"
                android:repeatCount="infinite"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>

    <target android:name="hour_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="rotation"
                android:duration="4000"
                android:valueFrom="0"
                android:valueTo="360"
                android:valueType="floatType"
                android:repeatCount="infinite"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>